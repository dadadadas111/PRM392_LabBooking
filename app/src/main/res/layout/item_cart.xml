<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSurface"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Bên trái: Thông tin phòng -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/room_label"
            android:textColor="@color/colorOnBackground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_sample"
            android:textColor="@color/colorOnSurface"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/features_sample"
            android:textColor="@color/colorOnSurface"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtPriceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_sample"
            android:textColor="@color/colorAccentPurple"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Bên phải: Nút xoá căn giữa -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete"
        app:tint="@color/colorError" />
</LinearLayout>
