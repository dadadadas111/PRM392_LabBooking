<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/map_action_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent">
        <ImageButton
            android:id="@+id/btnRecenter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_button_selector"
            android:src="@android:drawable/ic_menu_mylocation"
            android:contentDescription="Recenter"
            android:elevation="6dp"
            android:layout_marginBottom="16dp" />
        <ImageButton
            android:id="@+id/btnOpenInGoogleMaps"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_button_selector"
            android:src="@drawable/ic_google_logo"
            android:contentDescription="Open in Google Maps"
            android:elevation="6dp"
            android:layout_marginBottom="16dp" />
        <ImageButton
            android:id="@+id/btnShowDirections"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_button_selector"
            android:src="@android:drawable/ic_menu_directions"
            android:contentDescription="Show Directions"
            android:elevation="6dp"
            android:layout_marginBottom="16dp" />
        <ImageButton
            android:id="@+id/btnOtherAction"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_button_selector"
            android:src="@android:drawable/ic_menu_info_details"
            android:contentDescription="Other Action"
            android:elevation="6dp" />
    </LinearLayout>
</FrameLayout>
